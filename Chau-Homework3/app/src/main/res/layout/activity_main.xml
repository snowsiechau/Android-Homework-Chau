<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gloryhunter.chau_homework3.MainActivity"
    >

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLength="20"
        android:maxLines="1"
        android:textSize="@dimen/numberSize"
        android:background="#f2ff00"
        android:textColor="#ff00f2"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_1"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_2"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_3"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_4"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_5"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_6"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_7"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_8"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_9"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"

                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_0"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_dot"
                    android:onClick="onClickButton"
                    android:background="@color/backgroundButton"


                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="="
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_equal"
                    android:background="#f9fd01"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="C"
                    android:textSize="@dimen/numberSize"
                    android:id="@+id/bt_clear"
                    android:background="#ff0000"
                    />

                <ImageButton
                    android:id="@+id/ib_del"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_backspace_black_24dp"
                    android:background="#0029f4"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="@dimen/numberSize"
                android:id="@+id/bt_add"
                android:background="@color/backgroundButtonOperator"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="@dimen/numberSize"
                android:id="@+id/bt_sub"
                android:background="@color/backgroundButtonOperator"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="x"
                android:textSize="@dimen/numberSize"
                android:id="@+id/bt_mul"
                android:background="@color/backgroundButtonOperator"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="@dimen/numberSize"
                android:id="@+id/bt_div"
                android:background="@color/backgroundButtonOperator"


                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
