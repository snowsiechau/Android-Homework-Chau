<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gloryhunter.chau_homework2.MainActivity"
    android:background="#ffe100"
    >

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/tv_rcpl"
       android:text="Rencently Played"
       android:textSize="35sp"
       android:textColor="#cf1717"
       android:textStyle="bold"
       android:layout_margin="@dimen/margin"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_shape"
        android:orientation="horizontal"
        android:layout_below="@id/tv_rcpl"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/rectangle_height"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/shape"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/rectangle_height"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/shape"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_airline_seat_legroom_reduced_black_24dp"
            android:padding="@dimen/padding"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_autorenew_black_24dp"
            android:padding="@dimen/padding"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_cloud_done_black_24dp"
            android:padding="@dimen/padding"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_filter_vintage_black_24dp"
            android:padding="@dimen/padding"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_weekend_black_24dp"
            android:padding="@dimen/padding"
            />
    </LinearLayout>

</RelativeLayout>
